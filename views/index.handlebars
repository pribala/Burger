<div class="container">
    <div class="jumbotron text-right">
      <h1 class="display-3"><strong> Eat Da Burger</strong></h1>
   
      <p class="lead mt-4"><i class="fa fa-cutlery" aria-hidden="true"></i> All you can eat Burger Buffet!</p>
             
    </div>
    <div class="row text-center">
      <div class="col-md-6 offset-md-3">
      <div class="card">
        <div class="card-header">
          Add a Burger
        </div>
        <div class="card-body">
          <form class="create-form">
            <div class="form-group">
            <label for="burgerName">Burger Name:</label>
            <input type="text" id="burgerName" name="burgerName">
            </div>
            <button type="submit" class="btn">Add a Burger</button>
          </form>
        </div>
      </div>      
    </div>
  </div> 
  <div class="row mt-4">
    <div class="col-6">
      <div class="card">
        <div class="card-header text-center">
          Burgers Waiting To Be Devoured        </div>
        <div class="card-body">
          <p class="card-text">
            <ul>
              {{#each burgers}}
                <li>
                {{ burger_name }}
                {{ devoured }}
                {{ date }}
                </li>
              {{/each}}
            </ul>
          </p>
        </div>
      </div>
    </div>
    <div class="col-6">
      <div class="card">
        <div class="card-header text-center">
          Burgers Already Devoured
        </div>
        <div class="card-body">
          <p class="card-text">
            <ul>
              {{#each burgers}}
                {{#if devoured}}
                <li>
                {{ burger_name }}
                {{ devoured }}
                {{ date }}
                </li>
                {{/if}}
              {{/each}}
            </ul>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>